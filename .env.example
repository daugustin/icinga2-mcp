# Icinga2 API Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# Required: Icinga2 API Credentials
# ==============================================================================

# Icinga2 API endpoint URL (including port, typically 5665)
# For SSH tunneling, this can be a dummy URL (will be replaced with tunnel URL)
ICINGA2_API_URL=https://icinga.example.com:5665

# Icinga2 API username (configured in your Icinga2 ApiUser object)
ICINGA2_API_USER=mcp-user

# Icinga2 API password
ICINGA2_API_PASSWORD=your-secure-password-here

# ==============================================================================
# Optional: SSL Certificate Verification
# ==============================================================================

# Verify SSL certificates (default: true)
# Set to "false" to disable SSL verification for self-signed certificates
# WARNING: Disabling SSL verification is insecure and should only be used
# in development/testing environments
#ICINGA2_VERIFY_SSL=true

# ==============================================================================
# Optional: SSH Tunnel Configuration
# Use this when Icinga2 API is not publicly accessible
# ==============================================================================

# SSH server hostname or IP address
# If set, an SSH tunnel will be created to access the Icinga2 API
#ICINGA2_SSH_HOST=bastion.example.com

# SSH server port (default: 22)
#ICINGA2_SSH_PORT=22

# SSH username
#ICINGA2_SSH_USER=your-ssh-user

# SSH private key path (e.g., ~/.ssh/id_rsa)
# Either SSH key or password is required
#ICINGA2_SSH_KEY_PATH=/home/user/.ssh/id_rsa

# SSH password (if not using key-based authentication)
#ICINGA2_SSH_PASSWORD=your-ssh-password

# Icinga2 API host as seen from the SSH server (default: localhost)
# Use "localhost" if Icinga2 is running on the SSH server
# Use internal IP if Icinga2 is on a different server in the same network
#ICINGA2_REMOTE_HOST=localhost

# Icinga2 API port on the remote host (default: 5665)
#ICINGA2_REMOTE_PORT=5665
